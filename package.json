{
  "name": "hardhat-project",
  "scripts": {
    "compile": "hardhat compile",
    "typechain": "hardhat typechain",
    "test": "hardhat test",
    "prettier": "prettier --write 'contracts/**/*.sol' 'scripts/**/*.ts' 'test/**/*.ts'",
    "deploy": "hardhat run scripts/deploy.ts --network",
    "impl": "hardhat run scripts/impl.ts --network",
    "upgrade": "hardhat run scripts/upgrade.ts --network",
    "build-contracts": "sol-merger --remove-comments \"./contracts/*.sol\" ./build"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "1.0.5",
    "@nomicfoundation/hardhat-toolbox": "2.0.0",
    "hardhat": "2.12.5",
    "prettier": "2.8.1",
    "prettier-plugin-solidity": "1.1.1",
    "sol-merger": "4.4.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.8.0",
    "@openzeppelin/contracts-upgradeable": "4.8.0",
    "@openzeppelin/hardhat-upgrades": "1.22.0",
    "@uniswap/v2-core": "1.0.1",
    "@uniswap/v2-periphery": "1.1.0-beta.0",
    "dotenv": "16.0.3",
    "ethers": "5.7.2"
  }
}
